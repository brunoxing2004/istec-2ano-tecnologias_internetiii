@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <p>Acesso ao Portal:</p>
            <form name="frmLogin" method="post" action="/Conta/Login" validate>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label for="txtEmail">eMail</label>
                        <input type="email" class="form-control" placeholder="Email" name="txtEmail" id="txtEmail" required data-validation-required-message="Por favor indique o seu Email.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label for="Senha">Senha</label>
                        <input type="password" class="form-control" placeholder="Senha" name="Senha" id="Senha" required data-validation-required-message="Por favor indique a sua Senha.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button id="submit" type="submit" name="submit" class="btn btn-default">Entrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<hr>
