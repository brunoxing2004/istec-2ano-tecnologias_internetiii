
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @{
        for(int i = 0; i < 10; i++) {
            <p>@i</p>
        }
    }

    @{ var mensagem = "Olá turma de TI3"; }

    <h2>@mensagem</h2>

    @{
        var mensagem2 = "";
        if (DateTime.Now.Hour > 12) mensagem2 = "Boa Tarde";
        else mensagem2 = "Boa noite ou manhã";
    }

    <h3>@mensagem2</h3>

    @{
        <table border="1">
            
        <tr>
            @for (int i = 1; i <= 10; i++)
            {
             
                <td>
                    <table>
                        @for (int j = 1; j <= 10; j++)
                        {
                        
                                <tr><td>@(i)</td><td> x </td><td>@(j)</td><td> = </td><td>@(i * j)</tr>
                        
                        }
                    </table>
                </td>
            
            }
        </tr>
        </table>
    }

    @{
        var strInteiro = "123,99";
        var fQQ = 0F;
        if (float.TryParse(strInteiro, out fQQ))
        {
            <p>Convertido: @fQQ</p>
        };
    }
</body>
</html>
